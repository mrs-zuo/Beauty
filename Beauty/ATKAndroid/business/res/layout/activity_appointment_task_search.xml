<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backcolor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbarbg" >
        <ImageButton
            android:id="@+id/appointment_task_search_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/navbar_backbutton"
            android:contentDescription="@string/search" />
    </RelativeLayout>
    <RelativeLayout style="@style/activity_title_layout_attrs" >
        <TextView
            android:id="@+id/order_search_new_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/appointment_search_new_title_text" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/tab_backcolor" >
    </View>
    <RelativeLayout
        style="@style/activity_content_table_relativelayout_attrs"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/task_responsible_person"
            android:textColor="@color/title_font"
            android:textSize="@dimen/text_size" />
        <TextView
            android:id="@+id/appointment_task_responsible_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:gravity="right"
            android:hint="@string/select_employee_pic"
            android:maxWidth="250dip"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/tab_backcolor" >
    </View>
    <RelativeLayout
        android:id="@+id/appointment_search_new_customer_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:gravity="center_vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/appointment_task_search_customer_text"
            android:textColor="@color/title_font"
            android:textSize="@dimen/text_size"
            android:hint="@string/all_opportunity_pop_menu"/>
        <TextView
            android:id="@+id/appointment_task_search_customer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:maxWidth="250dip"
            android:gravity="right"
            android:hint="@string/advanced_customer_text"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/appointment_search_reset_btn"
                style="@style/search_reset_btn"
                android:layout_weight="1"
                android:contentDescription="@string/search"
                android:text="@string/reset_btn_text" />
            <Button
                android:id="@+id/appointment_search_make_sure_btn"
                style="@style/search_btn"
                android:layout_weight="1"
                android:contentDescription="@string/search"
                android:text="@string/search_btn_text" />
        </LinearLayout>
    </TableLayout>
</LinearLayout>