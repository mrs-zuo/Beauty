<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backcolor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/order_search_new_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/appointment_detail_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout style="@style/activity_content_table_attrs" >

                <RelativeLayout
                    android:id="@+id/appointment_detail_num_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/appointment_detail_num" />

                    <TextView
                        android:id="@+id/apponitment_detail_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" >
                </View>

                <RelativeLayout
                    android:id="@+id/appointment_detail_customer_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/right_menu_customer" />

                    <ImageButton
                        android:id="@+id/order_detail_select_customer_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/join_in_arrowhead"
                        android:contentDescription="@string/search"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/appointment_detail_customer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@+id/order_detail_select_customer_icon"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" >
                </View>

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/appointment_status" />

                    <TextView
                        android:id="@+id/appointment_detail_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:gravity="right"
                        android:paddingLeft="50dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" >
                </View>

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/appointment_detail_branch" />

                    <TextView
                        android:id="@+id/appointment_detail_branch_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        android:id="@+id/appointment_detail_date_title"
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/appointment_to_the_branch_time_text" />

                    <TextView
                        android:id="@+id/appointment_detail_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        android:id="@+id/appointment_detail_service_title"
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/appointment_service" />

                    <TextView
                        android:id="@+id/appointment_detail_service_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/isdesignat_appointment_responsible_person" />

                    <TextView
                        android:id="@+id/isdesignat_appointment_responsible_person_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/designated_responsible_person_divide_view" 
                    style="@style/activity_content_divide_view_attrs" 
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/designated_responsible_person_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/designated_responsible_person_title"
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/designated_responsible_person" />

                    <TextView
                        android:id="@+id/designated_responsible_person_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:hint="@string/choose_appointment_responsible_person"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:id="@+id/appointment_remark_tablelayout"
                style="@style/activity_content_table_attrs" >

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/customer_remark" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <EditText
                        android:id="@+id/appointment_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:background="@null"
                        android:hint="@string/please_input_customer_remark"
                        android:maxLength="300"
                        android:minLines="3"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:id="@+id/order_tablelayout"
                style="@style/activity_content_table_attrs"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/appointment_detail_order_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/appointment_detail_order_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/order_serial_number"
                        android:textColor="@color/title_font"
                        android:textSize="@dimen/text_size" />

                    <ImageButton
                        android:id="@+id/appointment_detail_order_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/join_in_arrowhead"
                        android:contentDescription="@string/search"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/appointment_detail_order_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@+id/appointment_detail_order_icon"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/tab_backcolor" >
                </View>

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/appointment_detail_order_product_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/tab_backcolor" >
                </View>

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/appointment_detail_order_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/payment_record_detail_order_total_price"
                        android:textColor="@color/title_font"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/appointment_detail_order_price_currency_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/appointment_detail_order_price_text"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/appointment_detail_order_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/payment_record_detail_order_total_price"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/appointment_detail_cancel"
                        style="@style/cancel_middle_btn"
                        android:contentDescription="@string/search"
                        android:text="@string/appointment_detail_cancel"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/appointment_detail_confirm"
                        style="@style/submit_middle_btn"
                        android:contentDescription="@string/search"
                        android:text="@string/appointment_detail_ok"
                        android:layout_weight="1"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/appointment_detail_order_make_sure"
                        style="@style/submit_middle_btn"
                        android:contentDescription="@string/search"
                        android:text="@string/add_order_btn_text"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>