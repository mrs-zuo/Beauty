<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title_backcolor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="cn.com.antika.business.PaymentRecordDetailActivity" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/payment_record_detail_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/payment_record_detail_title_text" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/payment_record_detail_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout style="@style/activity_content_table_attrs" >

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_code" />

                        <TextView
                            android:id="@+id/payment_record_detail_code_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/payment_record_detail_date"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_date" />

                        <TextView
                            android:id="@+id/payment_record_detail_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_operator" />

                        <TextView
                            android:id="@+id/payment_record_detail_operator_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_amount" />

                        <TextView
                            android:id="@+id/payment_record_detail_amount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_detail_before_cash_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/payment_detail_cash_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_amount_crash"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/payment_record_detail_amount_crash_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_detail_before_bank_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/payment_detail_bank_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_amount_bank_card"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/payment_record_detail_amount_bank_card_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_detail_before_ecard_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/payment_detail_ecard_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_ecard"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/payment_record_detail_amount_ecard_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_detail_before_other_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/payment_detail_other_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_other"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/payment_record_detail_amount_other_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_detail_before_balance_divide_view"
                        style="@style/activity_content_divide_view_attrs"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/payment_detail_balance_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs"
                        android:visibility="gone" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/recharge_detail_balance" />

                        <TextView
                            android:id="@+id/payment_record_detail_balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            android:id="@+id/payment_record_detail_benefit_person"
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/benefit_person_prompt"
                            android:textColor="@color/title_font" />

                        <TextView
                            android:id="@+id/payment_record_detail_benefit_person_text"
                            android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:maxWidth="400dip"
                            android:layout_marginRight="5dip"
                            android:layout_marginLeft="150dip"
                            android:textSize="@dimen/text_size"  />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_record_detail_remark_title_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/payment_record_detail_remark_title_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_remark" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/payment_record_detail_remark_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            android:id="@+id/payment_record_detail_remark_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:minLines="3"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_record_detail_order_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>