<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="cn.com.antika.business.TreatmentReviewActivity"
    android:background="@color/title_backcolor">

    <RelativeLayout
        android:id="@+id/treatment_review_title"
        style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/service_treatment_review_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/treatment_review_title" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/service_treatment_review_layout"
       	style="@style/activity_content_table_attrs" 
        android:layout_height="wrap_content"
        android:minHeight="200dip"
        android:layout_below="@id/treatment_review_title"
         >

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center" 
            android:padding="5dip">

            <ImageButton
                android:id="@+id/review_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/evaluate_unselected_big_icon"
                android:contentDescription="@string/search" />

            <ImageButton
                android:id="@+id/review_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/evaluate_unselected_big_icon"
                android:contentDescription="@string/search" />

            <ImageButton
                android:id="@+id/review_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/evaluate_unselected_big_icon"
                android:contentDescription="@string/search" />

            <ImageButton
                android:id="@+id/review_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/evaluate_unselected_big_icon"
                android:contentDescription="@string/search" />

            <ImageButton
                android:id="@+id/review_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/evaluate_unselected_big_icon"
                android:contentDescription="@string/search" />
        </LinearLayout>

        <View
            style="@style/activity_content_divide_view_attrs" >
        </View>

        <RelativeLayout
            android:id="@+id/treatment_review_content"
            style="@style/activity_content_table_relativelayout_attrs" >

            <TextView
                android:id="@+id/treatment_review_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>
    </TableLayout>

</RelativeLayout>