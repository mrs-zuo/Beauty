<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:orientation="vertical" 
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bussiness_headimage"
            android:layout_width="@dimen/business_headimage_width_height"
            android:layout_height="@dimen/business_headimage_width_height"
            android:contentDescription="@string/search" 
            android:gravity="center"/>
        <TextView
            android:id="@+id/bussiness_accountname"
            android:layout_width="@dimen/business_headimage_width_height"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/bussiness_headimage"
            android:singleLine="true"
            android:text="@string/ellipsis"
            android:ellipsize="end"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" >
    </View>

    <ListView
        android:id="@+id/menu_left_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip">
    </ListView>

</LinearLayout>