<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="cn.com.antika.business.ServiceOrderContactDetailActivity"
    android:background="@color/title_backcolor">
	<include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />
    <RelativeLayout
          style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/service_order_contact_detail_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/service_order_contact_detail"
             />

        <ImageButton
            android:id="@+id/service_order_contact_detail_edit_btn"
            style="@style/activity_title_button_attrs"
            android:background="@drawable/service_detail_edit_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/service_order_contact_detail_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/service_order_contact_detail_tablelayout"
            style="@style/activity_content_table_attrs" >

            <RelativeLayout
                style="@style/activity_content_table_relativelayout_attrs" >

                <TextView
                    style="@style/activity_content_table_row_title_attrs"
                    android:text="@string/order_edit_time"
                    />

                <TextView
                    android:id="@+id/service_order_contact_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>

            <View
                style="@style/activity_content_divide_view_attrs" />

            <RelativeLayout
                style="@style/activity_content_table_relativelayout_attrs" >

                <TextView
                    style="@style/activity_content_table_row_title_attrs"
                    android:text="@string/treatment_service_detail_status"
                    />

                <TextView
                    android:id="@+id/service_order_contact_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>
        </TableLayout>

        <TableLayout
            android:id="@+id/tservice_order_contact_detail_remark_tablelayout"
            style="@style/activity_content_table_attrs" >

            <RelativeLayout
               	style="@style/activity_content_table_relativelayout_attrs">

                <TextView
                   style="@style/activity_content_table_row_title_attrs"
                   android:text="@string/service_order_contact_detail_remark"
                    />
            </RelativeLayout>

            <View
                style="@style/activity_content_divide_view_attrs"/>

            <RelativeLayout
                style="@style/activity_content_table_relativelayout_attrs">

                <TextView
                    android:id="@+id/service_order_contact_detail_remark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>
        </TableLayout>
    </LinearLayout>

</LinearLayout>
