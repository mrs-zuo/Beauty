    <View style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/product_old_order_list_completeOrtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size"
            />

       
        <TextView
            android:id="@+id/product_old_order_list_surpluscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
        
    </RelativeLayout>
   <View
        android:id="@+id/prepare_order_product_total_sale_price_divide_view"
        style="@style/activity_content_divide_view_attrs" />
  
    <LinearLayout
        android:id="@+id/product_old_order_subService_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical"
        android:background="@color/tg_background_color" >
    </LinearLayout> 

     <RelativeLayout
        android:id="@+id/prepare_order_product_total_sale_price_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs" >
        <Button
            android:id="@+id/product_old_order_subservice_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dip"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:text="@string/product_old_order_add_subservice"
            android:background="@xml/shape_btn_blue"
            />
    </RelativeLayout>
    
    <View
        android:id="@+id/prepare_order_product_total_sale_price_divide_view"
        style="@style/activity_content_divide_view_attrs" />
    
    <RelativeLayout
        android:id="@+id/prepare_order_product_total_sale_price_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs" >
