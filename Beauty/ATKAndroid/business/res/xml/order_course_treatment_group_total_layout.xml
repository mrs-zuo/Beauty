<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    <RelativeLayout 
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/treatment_group_complete_text"
            style="@style/activity_content_table_row_title_attrs"
            android:layout_centerVertical="false"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/treatment_group_surplus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
	<View 
	    android:id="@+id/treatment_group_complete_divide_view"
	    style="@style/activity_content_divide_view_attrs" />
</LinearLayout>