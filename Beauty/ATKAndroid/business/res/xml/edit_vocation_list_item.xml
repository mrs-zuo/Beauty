<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		 style="@style/activity_content_table_attrs"
    		 android:id="@+id/customer_vocation_list_item_table">
    <RelativeLayout
        style="@style/activity_content_table_relativelayout_attrs">
        <TextView
            android:id="@+id/edit_vocation_question_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <View android:id="@+id/question_description_divide_view"
        	style="@style/activity_content_divide_view_attrs" />
    <RelativeLayout
        android:id="@+id/question_description_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs">
        <TextView
            android:id="@+id/edit_vocation_question_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/gray"/>
    </RelativeLayout>
    <View
        	style="@style/activity_content_divide_view_attrs" />
</TableLayout>