<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/dispense_complete_order_product_name_text"
        android:layout_width="@dimen/order_list_product_name_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:singleLine="true"
        android:text="@string/ellipsis"
        android:textSize="@dimen/text_size_14sp" 
        android:textColor="@color/title_font"/>
    <TextView
        android:id="@+id/dispense_complete_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dispense_complete_order_product_name_text"
        android:layout_alignLeft="@id/dispense_complete_order_product_name_text"
        android:textSize="@dimen/text_size_14sp" 
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/dispense_complete_order_responsible_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dispense_complete_order_time"
        android:layout_alignLeft="@id/dispense_complete_order_time"
        android:textSize="@dimen/text_size_14sp" 
        android:textColor="@color/gray"
        android:layout_marginBottom="5dip"
        />
    <ImageView
        android:id="@+id/dispense_complete_order_select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"/>
    <TextView
        android:id="@+id/dispense_complete_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/dispense_complete_order_select_icon"
        android:textSize="@dimen/text_size_14sp" 
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/dispense_complete_order_executing_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        android:layout_alignRight="@id/dispense_complete_order_status"
        android:textSize="@dimen/text_size_14sp" 
        android:textColor="@color/black"/>
</RelativeLayout>