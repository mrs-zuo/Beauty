<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <ImageView
            android:id="@+id/vocation_item_check_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/vocation_item_check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/vocation_item_check_image"
            android:layout_marginLeft="5dip"
            android:textSize="@dimen/text_size" 
            android:textColor="@color/gray"/>
    </RelativeLayout>

    <View
        android:id="@+id/vocation_item_check_divide_view"
        style="@style/activity_content_divide_view_attrs" />

</LinearLayout>