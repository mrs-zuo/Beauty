<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/relative_layout_has_child_attrs"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/vocation_item_check_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/customer_vocation_edit_answer_item"
        style="@style/relative_layout_left_child_attrs"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_toLeftOf="@id/vocation_item_check_image"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>