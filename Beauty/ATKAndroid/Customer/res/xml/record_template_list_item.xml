<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/relative_layout_has_child_attrs">
     <TextView
        android:id="@+id/record_template_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_normal" />
      <TextView
        android:id="@+id/record_template_update_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/record_template_title_text"
        android:layout_marginTop="14dp"
        android:textSize="@dimen/text_size_normal" />
    <TextView
        android:id="@+id/record_template_person_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/record_template_update_time_text"
        android:textSize="@dimen/text_size_normal" />
</RelativeLayout>