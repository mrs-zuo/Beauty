<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/layout_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" >
    </View>

    <RelativeLayout
        android:id="@+id/order_payment_detail_list_item_card_layout"
        style="@style/relative_layout_has_child_attrs" >
        <TextView
            android:id="@+id/card_type_title"
            style="@style/relative_layout_left_child_attrs"
            android:layout_marginLeft="25dip"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/card_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_normal" />
        <TextView
            android:id="@+id/order_payment_detail_list_item_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/card_payment_amount"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</LinearLayout>