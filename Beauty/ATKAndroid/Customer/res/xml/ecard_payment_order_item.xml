<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@xml/shape_corner_round"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/order_number_layout"
        style="@style/relative_layout_has_child_attrs" >
        <TextView
            style="@style/relative_layout_left_child_attrs"
            android:text="@string/ecard_payment_order_number"
            android:textColor="@color/text_color" />
        <ImageView
            android:id="@+id/arrowhead"
            style="@style/relative_layout_right_child_attrs"
            android:src="@drawable/join_in_arrowhead_gray" />
        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/arrowhead" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" >
    </View>
    <RelativeLayout style="@style/relative_layout_has_child_attrs" >
        <TextView
            android:id="@+id/product_name"
            style="@style/relative_layout_left_child_attrs"
            android:text="@string/title_course"
            android:textColor="@color/text_color" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" >
    </View>
    <RelativeLayout style="@style/relative_layout_has_child_attrs" >
        <TextView
            style="@style/relative_layout_left_child_attrs"
            android:text="@string/ecard_payment_order_amount"
            android:textColor="@color/text_color" />
        <TextView
            android:id="@+id/order_amount"
            style="@style/relative_layout_right_child_attrs" />
    </RelativeLayout>
</LinearLayout>