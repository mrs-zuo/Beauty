<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5C5B5"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/btn_main_back_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/navbar_backbutton" />
         <TextView
            style="@style/activity_title_text_attrs"
            android:text="@string/title_company_select_list"
            android:textColor="@color/white"
            android:layout_centerInParent="true" 
            android:textSize="@dimen/text_size_normal"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/company_list"
        style="@style/list_view_attrs" />

</LinearLayout>