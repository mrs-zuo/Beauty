<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" 
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/top_promotion_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white" />
            <LinearLayout
                android:id="@+id/top_promotion_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >
           <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menu_service_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_service_icon"
                    android:gravity="center"
                    android:contentDescription="@string/search"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_type_status_0"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_below="@id/menu_service_icon"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menu_commodity_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_commodity_icon"
                    android:gravity="center"
                    android:contentDescription="@string/search"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_type_status_1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_below="@id/menu_commodity_icon"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menu_company_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_company_icon"
                    android:gravity="center"
                    android:contentDescription="@string/search"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company_title_text"
                    android:layout_below="@id/menu_company_icon"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menu_remind_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_remind_icon"
                    android:gravity="center"
                    android:contentDescription="@string/search"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_remind"
                    android:layout_below="@id/menu_remind_icon"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/promotion_title_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" >
                <View
                    android:id="@+id/promotion_title_divide_view"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@color/text_color" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/promotion_title_divide_view"
                    android:text="@string/promotion_title_text"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/promotion_more_title"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/gray" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/promotion_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
              <RelativeLayout
                android:id="@+id/recommend_title_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" >
                <View
                    android:id="@+id/recommend_title_divide_view"
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@color/text_color" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/recommend_title_divide_view"
                    android:text="@string/recommend__title_text"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black" />
              
            </RelativeLayout>
            <GridView
                android:id="@+id/recommend_list_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:columnWidth="100dp"
				android:stretchMode="columnWidth"
				android:verticalSpacing="20dp"
				android:horizontalSpacing="10dp">
            </GridView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>