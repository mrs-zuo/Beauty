<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".PromotionDetailActivity" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >
                <ImageView
                    android:id="@+id/activity_promotion_detail_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/search" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="14dp" >
                <TextView
                    android:id="@+id/activity_promotion_detail_promotion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text_size_normal"
                    android:lineSpacingExtra="8dp"/>
            </RelativeLayout>
            <View style="@style/divide_view"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >
                <TextView
                    style="@style/relative_layout_left_child_attrs"
                    android:text="@string/title_promotion_campaign_detail" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/promotion_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="14dp" 
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="6dp">
                <!-- 文字的行距 android:lineSpacingExtra  10dp -->
                <TextView
                    android:id="@+id/activity_promotion_detail_campaign_content"
                    style="@style/relative_layout_left_child_attrs"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/gray"
                    android:layout_centerVertical="false"/>
            </RelativeLayout>
            <View style="@style/divide_view" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >
                <TextView
                    style="@style/relative_layout_left_child_attrs"
                    android:text="@string/title_promotion_time" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="14dp" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/activity_promotion_detail_promotion_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:text="@string/start_tag"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_normal" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >
                    <TextView
                        android:id="@+id/activity_promotion_detail_promotion_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:text="@string/end_tag"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_normal" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/promotion_detail_branch_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >
                <TextView
                    style="@style/relative_layout_left_child_attrs"
                    android:text="@string/title_promotion_adapt_branch_list" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_promotion_detail_branch_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>