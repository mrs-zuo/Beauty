<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/dispense_complete_order_product_name_text"
        android:layout_width="500dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="@string/ellipsis"
        android:textSize="@dimen/text_size_normal" />
    <TextView
        android:id="@+id/dispense_complete_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dispense_complete_order_product_name_text"
        android:layout_alignLeft="@id/dispense_complete_order_product_name_text"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_normal" 
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/dispense_complete_order_responsible_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dispense_complete_order_time"
        android:layout_alignLeft="@id/dispense_complete_order_time"
        android:layout_marginTop="5dip"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/dispense_complete_order_select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"/>
    <TextView
        android:id="@+id/dispense_complete_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/dispense_complete_order_select_icon"
        android:textSize="@dimen/text_size_normal" 
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/dispense_complete_order_executing_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/dispense_complete_order_status"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/black"/>
</RelativeLayout>