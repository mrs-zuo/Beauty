<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f4f4f4" >
    </View>

    <RelativeLayout style="@style/relative_layout_has_child_attrs" >
        <TextView
            android:id="@+id/evaluate_service_tm_name_text"
            style="@style/relative_layout_left_child_attrs"
            android:maxLength="15"
            android:singleLine="true"
            android:text="222222"
            android:textColor="@color/black" />

        <RatingBar
            android:id="@+id/evaluate_service_tm_ratingbar"
            style="@style/foodSmallRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:rating="5"
            android:stepSize="1" >
        </RatingBar>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f4f4f4" >
    </View>

    <RelativeLayout style="@style/relative_layout_has_child_attrs" >
        <EditText
            android:id="@+id/evaluate_service_tm_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:hint="@string/please_input_customer_evaluate"
            android:maxLength="300"
            android:minLines="3"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</LinearLayout>