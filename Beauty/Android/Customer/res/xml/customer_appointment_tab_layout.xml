<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <LinearLayout
                android:id="@+id/appointment_status_2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip" >
                <TextView
                    android:id="@+id/appointment_status_2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/appointment_status_2"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_normal" >
                </TextView>
            </LinearLayout>
            <View
                android:id="@+id/appointment_status_2_divide_view"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/appointment_status_2_layout"
                android:background="#D5C5B5" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <LinearLayout
                android:id="@+id/appointment_status_1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dip"
                android:saveEnabled="false" >
                <TextView
                    android:id="@+id/appointment_status_1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/appointment_status_1"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_normal" >
                </TextView>
            </LinearLayout>
            <View
                android:id="@+id/appointment_status_1_divide_view"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/appointment_status_1_layout"
                android:background="#D5C5B5" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <LinearLayout
                android:id="@+id/appointment_status_3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:padding="10dip" >
                <TextView
                    android:id="@+id/appointment_status_3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/appointment_status_3"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_normal" >
                </TextView>
            </LinearLayout>
            <View
                android:id="@+id/appointment_status_3_divide_view"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/appointment_status_3_layout"
                android:background="#D5C5B5" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <LinearLayout
                android:id="@+id/appointment_status_4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:padding="10dip" >
                <TextView
                    android:id="@+id/appointment_status_4_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/appointment_status_4"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_normal" >
                </TextView>
            </LinearLayout>
            <View
                android:id="@+id/appointment_status_4_divide_view"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/appointment_status_4_layout"
                android:background="#D5C5B5" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>