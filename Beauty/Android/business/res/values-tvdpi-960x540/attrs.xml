<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="activity_title_layout_attrs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/title_bar</item>
    </style>

    <style name="activity_title_text_attrs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="activity_title_button_attrs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:contentDescription">@string/search</item>
    </style>
    <style name="activity_content_table_attrs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@xml/shape_corner_round</item>
    </style>
    <style name="activity_content_divide_view_attrs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/table_row_color</item>
    </style>
    <style name="activity_content_table_row_title_attrs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="activity_content_listview_attrs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
	 <style name="activity_content_table_relativelayout_attrs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       	<item name="android:padding">8dip</item>
    </style>
    
</resources>