<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:paddingBottom="5dp"
    android:layout_centerVertical="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/account_headimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip" />

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/account_headimage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:maxWidth="150dp"
        android:text="@string/ellipsis"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size_18sp" />
    
    <TextView
        android:id="@+id/account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/account_headimage"
        android:layout_below="@id/account_name"
        android:maxWidth="@dimen/account_title_max_width"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dip"
        android:singleLine="true"
        android:text="@string/ellipsis"
        android:textSize="@dimen/text_size_16sp" />

    <ImageView
        android:id="@+id/arrowhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/join_in_arrowhead" />
    
    <TextView
        android:id="@+id/account_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip"
        android:layout_marginTop="5dp"
        android:maxWidth="@dimen/account_department_max_width"
        android:singleLine="true"
        android:text="@string/ellipsis"
        android:layout_below="@id/account_name"
        android:layout_toLeftOf="@id/arrowhead"
        android:textSize="@dimen/text_size_16sp" />

</RelativeLayout>