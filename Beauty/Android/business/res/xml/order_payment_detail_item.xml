<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
    		 xmlns:android="http://schemas.android.com/apk/res/android"
    		 style="@style/activity_content_table_attrs" 
    		 android:id="@+id/order_payment_detail_tablelayout">

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_code" />
          <ImageView
             android:id="@+id/payment_record_detail_up_down_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="5dip"
             android:contentDescription="@string/search" />
          <TextView
            android:id="@+id/payment_record_detail_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/payment_record_detail_up_down_icon"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout
        android:id="@+id/payment_record_detail_date"
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_date" />
        <TextView
            android:id="@+id/payment_record_detail_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout
        android:id="@+id/payment_record_detail_branch_name"
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_branch_name" />
        <TextView
            android:id="@+id/payment_record_detail_branch_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_type_name" />
        <TextView
            android:id="@+id/payment_record_detail_type_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_operator" />
        <TextView
            android:id="@+id/payment_record_detail_operator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_amount" />
        <TextView
            android:id="@+id/payment_record_detail_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View style="@style/activity_content_divide_view_attrs" />

    <LinearLayout
        android:id="@+id/payment_detail_issues_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
   
    <View 
        android:id="@+id/payment_record_detail_order_sales_view"
        style="@style/activity_content_divide_view_attrs" />
    
     <RelativeLayout
         android:id="@+id/payment_record_detail_order_sales_relativelayout" 
         style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/payment_record_detail_order_sales"
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/order_sales_percentage"
            android:textColor="@color/blue" />
        <TextView
            android:id="@+id/payment_record_detail_order_sales_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="150dip"
            android:layout_marginRight="5dip"
            android:maxWidth="400dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
    
    <View  
        android:id="@+id/service_and_product_benefit_share_view"
        style="@style/activity_content_divide_view_attrs" /> 
    
    <RelativeLayout 
        android:id="@+id/service_and_product_benefit_share_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/service_and_product_benefit_share"
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/service_and_product_benefit_share"
            android:textColor="@color/blue" />
        <TextView
            android:id="@+id/service_and_product_benefit_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="150dip"
            android:layout_marginRight="5dip"
            android:maxWidth="400dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
    
    <View  
        android:id="@+id/payment_record_detail_benefit_person_view"
        style="@style/activity_content_divide_view_attrs" /> 
     
    <RelativeLayout 
        android:id="@+id/payment_record_detail_benefit_person_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/payment_record_detail_benefit_person"
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/benefit_person_prompt"
            android:textColor="@color/blue" />
        <TextView
            android:id="@+id/payment_record_detail_benefit_person_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="150dip"
            android:layout_marginRight="5dip"
            android:maxWidth="400dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/payment_record_detail_remark_title_divide_view"
        style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout
        android:id="@+id/payment_record_detail_remark_title_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            style="@style/activity_content_table_row_title_attrs"
            android:text="@string/payment_record_detail_remark" />
    </RelativeLayout>

    <View
        android:id="@+id/payment_record_detail_remark_divide_view"
        style="@style/activity_content_divide_view_attrs" />

    <RelativeLayout
        android:id="@+id/payment_record_detail_remark_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/payment_record_detail_remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:minLines="3"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

</TableLayout>