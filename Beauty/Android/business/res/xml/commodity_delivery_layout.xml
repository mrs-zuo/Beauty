<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/tg_background_color">

    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/commodity_delivery_start_time_text"
            style="@style/activity_content_table_row_title_attrs"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/commodity_delivery_delete"
            style="@style/cancel_small_for_tg_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="@string/cancel" />
        <Button
            android:id="@+id/commodity_delivery_btn"
            style="@style/submit_small_for_tg_btn"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/commodity_delivery_delete"
            android:text="@string/treatment_group_complete" />
    </RelativeLayout>
    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >
        <TextView
            android:id="@+id/commodity_delivery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:textSize="@dimen/text_size" />
        <TextView
            android:id="@+id/commodity_delivery_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

</LinearLayout>