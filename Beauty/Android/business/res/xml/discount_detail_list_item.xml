<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
     android:orientation="vertical">
    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" 
                    android:background="@color/white">
        <TextView
            android:id="@+id/discount_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:textSize="@dimen/text_size"
            android:maxLength="10"
            android:singleLine="true"
            android:text="@string/ellipsis"/>
        <TextView
            android:id="@+id/discount_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
    <View
        android:id="@+id/discount_detail_item_divide_view" 
        style="@style/activity_content_divide_view_attrs" 
        android:background="@color/border_color"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"/>
</LinearLayout>