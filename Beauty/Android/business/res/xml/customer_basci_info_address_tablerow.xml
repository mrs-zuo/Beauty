<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        style="@style/activity_content_table_relativelayout_attrs">
         <EditText
            android:id="@+id/customer_basic_info_address_zip_code_edit_text" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:hint="@string/zip_code_info"
            android:maxLength="10"
            android:textSize="@dimen/text_size"
            android:textColor="@color/gray"
            android:inputType="number"
            android:background="@null"/>
          <EditText
            android:id="@+id/customer_basic_info_address_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_below="@id/customer_basic_info_address_zip_code_edit_text"
            android:hint="@string/address_info"
            android:maxWidth="180dip"
            android:maxLength="100"
            android:textSize="@dimen/text_size"
            android:textColor="@color/gray"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/del_customer_basic_info_table_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/del_table_row" />
        <Spinner
            android:id="@+id/customer_basic_telephone_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/del_customer_basic_info_table_row"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:entries="@array/address_type_array"
            android:background="@null"/>
       
    </RelativeLayout>
    <View
        style="@style/activity_content_divide_view_attrs" />

</LinearLayout>