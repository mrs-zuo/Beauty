<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OpportunityDetailActivity" 
    android:background="@color/title_backcolor">

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/opportunity_detail_sale_progress_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/opportunity_detail_sale_progress_title"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/opportunity_detail_margin_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/opportunity_detail_sale_progress_tablelayout1"
                style="@style/activity_content_table_attrs" >

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs">

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/opportunity_detail_create_time"
                    />

                    <TextView
                        android:id="@+id/opportunity_detail_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
                <View
                    style="@style/activity_content_divide_view_attrs" 
                   />
                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs">

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/record_customer"
                    />

                    <TextView
                        android:id="@+id/opportunity_detail_customer_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
                <View
                    style="@style/activity_content_divide_view_attrs" 
                   />
                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs">

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/service_order_detail_reaponsible"
                    />

                    <TextView
                        android:id="@+id/opportunity_detail_responsible_person_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:id="@+id/opportunity_detail_sale_progress_tablelayout2"
                style="@style/activity_content_table_attrs">

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs">

                    <TextView
                        android:id="@+id/opportunity_detail_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    style="@style/activity_content_divide_view_attrs" 
                   />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/opportunity_detail_quantity"
                        />

                    <TextView
                        android:id="@+id/opportunity_detail_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                     style="@style/activity_content_divide_view_attrs"/>

                <RelativeLayout
                   	style="@style/activity_content_table_relativelayout_attrs">

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/opportunity_detail_total_price"/>

                    <TextView
                        android:id="@+id/opportunity_detail_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                     <TextView
                        android:id="@+id/opportunity_detail_total_price_currency"
                        android:layout_toLeftOf="@id/opportunity_detail_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
                
                 <View
                     android:id="@+id/opportunity_detail_total_sale_price_view"
                     style="@style/activity_content_divide_view_attrs"/>

                <RelativeLayout
                    android:id="@+id/opportunity_detail_total_sale_price_relativelayout"
                   	style="@style/activity_content_table_relativelayout_attrs">

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/opportunity_detail_total_sale_price"/>

                    <TextView
                        android:id="@+id/opportunity_detail_total_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" 
                        android:textColor="@color/gray"/>
                     <TextView
                        android:id="@+id/opportunity_detail_total_sale_price_currency"
                        android:layout_toLeftOf="@id/opportunity_detail_total_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" 
                        android:textColor="@color/gray"/>
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:id="@+id/opportunity_detail_sale_progress_tablelayout3"
                style="@style/activity_content_table_attrs">

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs">
                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/opportunity_detail_sale_progress"
                    />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:gravity="center"
                   >
                    <LinearLayout
                        android:id="@+id/opportunity_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >
                    </LinearLayout>
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                >

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                  >
                    <ImageButton
                        android:id="@+id/only_cancel_opportunity_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/only_cancel_opportunity_btn"
                        android:contentDescription="@string/search"
                        android:layout_centerVertical="true"
                       />
					<ImageButton
                        android:id="@+id/cancel_opportunity_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cancel_opportunity_btn"
                        android:contentDescription="@string/search"
                        android:layout_alignParentLeft="true"
                       />
					
                    <ImageButton
                        android:id="@+id/dispatch_order_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dispatch_order_btn"
                        android:contentDescription="@string/search"
                        android:layout_alignParentRight="true"
                     />
                </RelativeLayout>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>