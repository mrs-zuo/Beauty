<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SendMarketingTemplateActivity"
    android:background="@color/title_backcolor"
    >
    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />
    <RelativeLayout 
        style="@style/activity_title_layout_attrs"
     >
     <TextView 
         android:id="@+id/emarketing_message_template_titie_text"
         style="@style/activity_title_text_attrs"
         android:text="@string/emarketing_message_template_titie_text"
         />
     <ImageButton
         android:id="@+id/add_new_emarketing_message_template"
         style="@style/activity_title_button_attrs"
         android:background="@drawable/add_marketing_message_template"
         />
    </RelativeLayout>
    <com.GlamourPromise.Beauty.view.RefreshListView
        android:id="@+id/emarketing_message_template_list"
        style="@style/activity_content_listview_attrs"
        android:divider="@null"/>

</LinearLayout>

