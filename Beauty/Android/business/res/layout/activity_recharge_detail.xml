<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title_backcolor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".RechargeDetailActivity" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/recharge_detail_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/recharge_detail_title_text" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip" >

        <LinearLayout
            android:id="@+id/payment_record_detail_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/recharge_detail_tablelayout" 
                style="@style/activity_content_table_attrs" >

                <RelativeLayout
                    android:id="@+id/recharge_detail_date"
                    style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        android:id="@+id/recharge_detail_date_title_text"
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/recharge_detail_date" />

                    <TextView
                        android:id="@+id/recharge_detail_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/payment_record_detail_operator" />

                    <TextView
                        android:id="@+id/recharge_detail_operator_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        android:id="@+id/recharge_detail_amount_title_text"
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/recharge_detail_amount" />

                    <TextView
                        android:id="@+id/recharge_detail_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/recharge_detail_type_before_view"
                    style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout
                    android:id="@+id/recharge_detail_type_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/recharge_detail_type" />

                    <TextView
                        android:id="@+id/recharge_detail_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/recharge_detail_balance" />

                    <TextView
                        android:id="@+id/recharge_detail_balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/benefit_person_prompt"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/recharge_detail_benefit_person_text"
                        android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_alignParentRight="true"
            			android:layout_marginRight="5dip"
            			android:layout_marginLeft="150dip"
            			android:maxWidth="400dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/recharge_detail_remark_title_divide_view"
                    style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout
                    android:id="@+id/recharge_detail_remark_title_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:text="@string/payment_record_detail_remark" />
                </RelativeLayout>

                <View
                    android:id="@+id/recharge_detail_remark_divide_view"
                    style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout
                    android:id="@+id/recharge_detail_remark_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        android:id="@+id/recharge_detail_remark_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:minLines="3"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>