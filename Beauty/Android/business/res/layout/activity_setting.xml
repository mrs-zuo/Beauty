<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backcolor"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <include
        android:id="@+id/head_layout"
        layout="@xml/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout style="@style/activity_title_layout_attrs">

        <TextView
            android:id="@+id/setting_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/setting_title_text" />
    </RelativeLayout>

    <View
        android:id="@+id/operation_way_before_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" />

    <RelativeLayout
        android:id="@+id/operation_way_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:text="操作模式"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/operation_way_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@null"
            android:gravity="right"
            android:paddingLeft="50dip" />
    </RelativeLayout>

    <View
        android:id="@+id/operation_way_after_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" />

    <View
        android:id="@+id/personal_message_before_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" />

    <RelativeLayout
        android:id="@+id/personal_message_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:text="@string/personal_message"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/join_in_arrowhead"
            android:contentDescription="@string/search" />
    </RelativeLayout>

    <View
        android:id="@+id/personal_message_after_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" />
