<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backcolor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/order_search_new_title_text"
            style="@style/activity_title_text_attrs"
            android:text="@string/appointment_task_detail_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout style="@style/activity_content_table_attrs" >
                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/visit_task_type"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />
                    <TextView
                        android:id="@+id/appointment_task_detail_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
				<View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/border_color" >
                </View>
                <RelativeLayout
                    android:id="@+id/appointment_detail_customer_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/appointment_task_detail_customer"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />

                    <ImageButton
                        android:id="@+id/order_detail_select_customer_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/join_in_arrowhead"
                        android:contentDescription="@string/search"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/appointment_task_detail_customer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@+id/order_detail_select_customer_icon"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/border_color" >
                </View>

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/appointment_detail_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/appointment_task_time_limit_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/appointment_task_time_limit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/border_color" >
                </View>

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/appointment_task_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/appointment_task_detail"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip" >

                    <TextView
                        android:id="@+id/appointment_task_detail_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip" >

                    <TextView
                        android:id="@+id/appointment_task_detail_order_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/appointment_related_order_divide_view"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/border_color" >
                </View>

                <RelativeLayout
                    android:id="@+id/appointment_related_order_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/appointment_related_order"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />

                    <ImageButton
                        android:id="@+id/appointment_related_order_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/join_in_arrowhead"
                        android:contentDescription="@string/search"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/appointment_related_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@+id/appointment_related_order_icon"
                        android:gravity="right"
                        android:paddingLeft="50dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/border_color" >
                </View>

                <RelativeLayout
                    android:id="@+id/designated_responsible_person_relativelayout"
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/designated_responsible_person_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/designated_responsible_person"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/designated_responsible_person_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:hint="@string/choose_appointment_responsible_person"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>

            <TableLayout style="@style/activity_content_table_attrs" >

                <RelativeLayout
                    style="@style/activity_content_table_relativelayout_attrs"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/appointment_task_time_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/appointment_task_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:hint="@string/appointment_time_hint_text"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/border_color" >
                </View>

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        style="@style/activity_content_table_row_title_attrs"
                        android:layout_marginLeft="5dp"
                        android:text="@string/appointment_task_result" />
                </RelativeLayout>

                <View style="@style/activity_content_divide_view_attrs" />

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <EditText
                        android:id="@+id/appointment_task_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:background="@null"
                        android:hint="@string/please_input_customer_remark"
                        android:maxLength="300"
                        android:minLines="3"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/appointment_task_save"
                        style="@style/submit_middle_btn"
                        android:layout_weight="1"
                        android:contentDescription="@string/search"
                        android:text="@string/appointment_task_save"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/appointment_task_complete"
                        style="@style/submit_middle_btn"
                        android:layout_weight="1"
                        android:contentDescription="@string/search"
                        android:text="@string/appointment_task_complete"
                        android:textColor="@color/white" />
                </LinearLayout>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>