<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/title_backcolor"
    android:orientation="vertical"
    tools:context=".EcardHistoryDetailActivity" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            style="@style/activity_title_text_attrs"
            android:text="@string/ecard_history_detail_title_text" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/payment_record_detail_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout 
                    android:id="@+id/ecard_history_detail_tablelayout"
                    style="@style/activity_content_table_attrs" >

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/ecard_history_detail_number" />

                        <TextView
                            android:id="@+id/ecard_history_detail_number_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/ecard_history_detail_date" />

                        <TextView
                            android:id="@+id/ecard_history_detail_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />
                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/ecard_history_detail_branch_name" />

                        <TextView
                            android:id="@+id/ecard_history_detail_branch_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/ecard_history_detail_action_mode" />

                        <TextView
                            android:id="@+id/ecard_history_detail_action_mode_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_operator" />

                        <TextView
                            android:id="@+id/ecard_history_detail_operator_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            android:id="@+id/payment_record_detail_benefit_person"
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/benefit_person_prompt"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/ecard_history_detail_benefit_person_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="150dip"
                            android:layout_marginRight="5dip"
                            android:maxWidth="400dip"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/ecard_history_detail_remark_title_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout
                        android:id="@+id/ecard_history_detail_remark_title_relativelayout"
                        style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            style="@style/activity_content_table_row_title_attrs"
                            android:text="@string/payment_record_detail_remark" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/ecard_history_detail_remark_divide_view"
                        style="@style/activity_content_divide_view_attrs" />

                    <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                        <TextView
                            android:id="@+id/ecard_history_detail_remark_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:minLines="3"
                            android:textSize="@dimen/text_size" />
                    </RelativeLayout>
                </TableLayout>
            </LinearLayout>

            <TableLayout style="@style/activity_content_table_attrs" >

                <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

                    <TextView
                        android:id="@+id/ecard_history_detail_amount_title_text"
                        style="@style/activity_content_table_row_title_attrs" />

                    <TextView
                        android:id="@+id/ecard_history_detail_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </TableLayout>
            <LinearLayout
                android:id="@+id/ecard_history_detail_action_mode_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ecard_history_detail_order_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>