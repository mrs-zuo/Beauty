<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_backcolor"
    android:orientation="vertical"
    tools:context=".CustomerViewOrderActivity" >

    <include
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@xml/head" />

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            android:id="@+id/customer_view_order_title_text"
            style="@style/activity_title_text_attrs"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" 
        android:background="@color/border_color" >
    </View>

    <RelativeLayout
        android:id="@+id/view_order_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/view_order"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:id="@+id/view_customer_order_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/join_in_arrowhead"
            android:contentDescription="@string/search" />

        <TextView
            android:id="@+id/view_customer_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/customer_view_order_margin_right"
            android:layout_toLeftOf="@id/view_customer_order_join"
            android:padding="5dp"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" >
    </View>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" 
        android:background="@color/border_color" >
    </View>

    <RelativeLayout
        android:id="@+id/active_service_order_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:background="@color/white"
        android:gravity="center_vertical" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/active_service_order"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:id="@+id/view_active_service_order_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/join_in_arrowhead"
            android:contentDescription="@string/search" />

        <TextView
            android:id="@+id/view_active_service_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/customer_view_order_margin_right"
            android:layout_toLeftOf="@id/view_active_service_order_join"
            android:padding="5dp"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" >
    </View>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" 
        android:background="@color/border_color" >
    </View>

    <RelativeLayout
        android:id="@+id/to_be_reach_commodity_order_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="@string/to_be_reach_commodity_order"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:id="@+id/to_be_reach_commodity_order_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/join_in_arrowhead"
            android:contentDescription="@string/search" />

        <TextView
            android:id="@+id/to_be_reach_commodity_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/customer_view_order_margin_right"
            android:layout_toLeftOf="@id/to_be_reach_commodity_order_join"
            android:padding="5dp"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" >
    </View>

    
    
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/border_color" >
    </View>

    <RelativeLayout
        android:id="@+id/payment_record_relativelayout"
        style="@style/activity_content_table_relativelayout_attrs"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:padding="5dp"
            android:text="@string/payment_record_list"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/join_in_arrowhead"
            android:contentDescription="@string/search" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/border_color" >
    </View>

</LinearLayout>