<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbarbg" >

        <ImageButton
            android:id="@+id/btn_main_back_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/navbar_backbutton" />
    </RelativeLayout>

    <RelativeLayout style="@style/activity_title_layout_attrs" >

        <TextView
            style="@style/activity_title_text_attrs"
            android:text="@string/customer_advanced_condition_title_text" />
    </RelativeLayout>

    <TableLayout style="@style/activity_content_table_attrs" >

        <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

            <TextView
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/customer_type_condition_title_text" />

            <Spinner
                android:id="@+id/customer_type_condition_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@null"
                android:gravity="right"
                android:paddingLeft="50dip" />
        </RelativeLayout>

        <View style="@style/activity_content_divide_view_attrs" />
        
        <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

            <TextView
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/customer_regist_from_title" />

            <Spinner
                android:id="@+id/customer_regist_from_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@null"
                android:gravity="right"
                android:paddingLeft="50dip" />
        </RelativeLayout>

        <View style="@style/activity_content_divide_view_attrs" />

        <RelativeLayout
            style="@style/activity_content_table_relativelayout_attrs"
            android:layout_width="match_parent" >

            <TextView
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/customer_source_title_text" />

            <Spinner
                android:id="@+id/customer_source_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@null"
                android:gravity="right"
                android:paddingLeft="50dip" />
        </RelativeLayout>

        <View style="@style/activity_content_divide_view_attrs" />

        <RelativeLayout style="@style/activity_content_table_relativelayout_attrs" >

            <TextView
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/new_customer_ecard_title" />

            <Spinner
                android:id="@+id/ecard_condition_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@null"
                android:gravity="right"
                android:paddingLeft="50dip" />
        </RelativeLayout>

        <View
            android:id="@+id/customer_advanced_responsible_person_divide_view"
            style="@style/activity_content_divide_view_attrs"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/customer_advanced_responsible_person_relativelayout"
            style="@style/activity_content_table_relativelayout_attrs"
            android:visibility="gone" >

            <TextView
                android:id="@+id/customer_advanced_responsible_person_title_text"
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/customer_advanced_responsible_person_title_text" />

            <EditText
                android:id="@+id/customer_advanced_responsible_person_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@id/customer_advanced_responsible_person_title_text"
                android:background="@null"
                android:gravity="right"
                android:hint="@string/customer_advanced_responsible_person_edit_text"
                android:textColor="@color/gray" />
        </RelativeLayout>
        
        <View style="@style/activity_content_divide_view_attrs" />
        
        <RelativeLayout
            android:id="@+id/customer_states_relativelayout"
            style="@style/activity_content_table_relativelayout_attrs" >

            <TextView
                android:id="@+id/customer_states_title_text"
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/customer_states" />

           <Spinner
                android:id="@+id/customer_states_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@null"
                android:gravity="right"
                android:paddingLeft="50dip" />
        </RelativeLayout>
        
        <View style="@style/activity_content_divide_view_attrs" />
        
       <RelativeLayout
            android:id="@+id/customer_regist_date_relativelayout"
            style="@style/activity_content_table_relativelayout_attrs">

            <TextView
                android:id="@+id/customer_regist_date_title_text"
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/customer_regist_date" />

            <Spinner
                android:id="@+id/customer_regist_date_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@null"
                android:gravity="right"
                android:paddingLeft="50dip" />
        </RelativeLayout>
        
        <View
            android:id="@+id/first_visit_dateTime_view"
            style="@style/activity_content_divide_view_attrs"
            android:visibility="gone" />
        
         <RelativeLayout
            android:id="@+id/first_visit_dateTime_relativelayout"
            style="@style/activity_content_table_relativelayout_attrs"
            android:visibility="gone" >

            <TextView
                android:id="@+id/first_visit_dateTime_title_text"
                style="@style/activity_content_table_row_title_attrs"
                android:text="@string/first_visit_dateTime_title_text" />

            <TextView
                android:id="@+id/first_visit_dateTime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:gravity="right"
                android:hint="@string/first_visit_dateTime_text"
                android:textColor="@color/gray" 
                android:textSize="@dimen/text_size"/>
        </RelativeLayout>
        
         <View style="@style/activity_content_divide_view_attrs" />
         
        <RelativeLayout
            android:id="@+id/search_customer_name_layout"
            style="@style/activity_content_table_relativelayout_attrs"
            android:visibility="gone">
			<TextView
				android:id="@+id/search_customer_name_title"
				style="@style/activity_content_table_row_title_attrs"
				android:text="@string/search_customer_name_title"/>

			<EditText
	            android:id="@+id/search_customer_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="5dip"
	            android:layout_marginRight="5dip"
	            android:hint="@string/search_customer_name_placeholder"
	            android:inputType="text"
	            android:gravity="right"
	            android:background="@null"
	            android:textSize="@dimen/text_size"
	            android:maxLength="20"/>
            
		</RelativeLayout>

		<View style="@style/activity_content_divide_view_attrs" />
        
		<RelativeLayout
		    android:id="@+id/search_customer_tel_layout"
		    style="@style/activity_content_table_relativelayout_attrs" 
		    android:visibility="gone">

			<TextView
				android:id="@+id/search_customer_tel_title"
				style="@style/activity_content_table_row_title_attrs"
				android:text="@string/search_customer_tel_title"/>

			<EditText
	            android:id="@+id/search_customer_tel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="5dip"
	            android:layout_marginRight="5dip"
	            android:hint="@string/search_customer_tel_placeholder"
	            android:inputType="number"
	            android:gravity="right"
	            android:background="@null"
	            android:textSize="@dimen/text_size"
	            android:maxLength="20"/>
        </RelativeLayout>

        <View style="@style/activity_content_divide_view_attrs" />
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/customer_advanced_search_reset_btn"
                style="@style/search_reset_btn"
                android:layout_weight="1"
                android:text="@string/reset_btn_text" />

            <Button
                android:id="@+id/customer_advanced_search_make_sure_btn"
                style="@style/search_btn"
                android:layout_weight="1"
                android:text="@string/search_btn_text" />
        </LinearLayout>
    </TableLayout>

</LinearLayout>