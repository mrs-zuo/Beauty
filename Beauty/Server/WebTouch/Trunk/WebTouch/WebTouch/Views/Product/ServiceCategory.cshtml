@{
    int categoryID = ViewBag.CategoryID;

    ViewBag.Title = "服务分类";


    Model.View_Model.CategoryInfo_Model model = Model;
    List<Model.View_Model.CategoryList_Model> categoryList = new List<Model.View_Model.CategoryList_Model>();
    if (model != null)
    {
        categoryList = model.CategoryList;
    }
}

<div class="wrapper whiteBkg">
    <div class="width90 blockC">
        <ul class="width100 rowUl">
            @{
                <li class="borderB clearfix">
                    <a href="/Product/ProductList?t=0&c=@(model.CategoryID)" class="positionR">
                        <div class="blackTex fl longTex90">@(model.CategoryName)</div>
                        <div class="grayTex fr">
                            <span class="rightArrowRow">
                                <img src="/pic/rightArrow.png" height="20" class="doubleArrow" /><img src="/pic/rightArrow.png" height="20" />
                            </span>
                        </div>
                    </a>
                </li>
            }
            @{
                if (categoryList != null && categoryList.Count > 0)
                {
                    foreach (Model.View_Model.CategoryList_Model item in categoryList)
                    {
                        if (item.NextCategoryCount > 0)
                        {
                            <li class="ML10 borderB clearfix">
                                <a href="/Product/ServiceCategory?c=@(item.CategoryID)" class="positionR">
                                    <div class="blackTex fl longTex95">@(item.CategoryName)</div>
                                    <div class="grayTex fr">
                                        <span class="rightArrowRow">
                                            <img src="/pic/rightArrow.png" height="20">
                                        </span>
                                    </div>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="ML10 borderB clearfix">
                                <a href="/Product/ProductList?t=0&c=@(item.CategoryID)" class="positionR">
                                    <div class="blackTex fl longTex95">@(item.CategoryName)</div>
                                    <div class="grayTex fr">
                                        <span class="rightArrowRow">
                                            <img src="/pic/rightArrow.png" height="20">
                                        </span>
                                    </div>
                                </a>
                            </li>
                        }
                    }

                }
            }
        </ul>
    </div>
</div>


