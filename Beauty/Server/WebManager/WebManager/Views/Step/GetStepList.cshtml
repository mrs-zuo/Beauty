@{   
    List<Model.Table_Model.Step_Model> list = Model;
}
<div class="page-container">
    <!-- Page Sidebar -->
    @Html.Partial("Sidebar", 17)
    <!-- /Page Sidebar -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- Page 面包屑 -->
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/home/index">首页</a>
                </li>
                <li class="active">销售步骤</li>
            </ul>
        </div>
        <!-- /Page 面包屑 -->
        <!-- Page Header -->
        <div class="page-header position-relative">
            <div class="header-title">
                <h1>销售步骤</h1>
            </div>
            <!--Header Buttons-->
            <div class="header-buttons">
                <a class="sidebar-toggler" href="#">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a class="refresh" id="refresh-toggler" href="">
                    <i class="glyphicon glyphicon-refresh"></i>
                </a>
                <a class="fullscreen" id="fullscreen-toggler" href="#">
                    <i class="glyphicon glyphicon-fullscreen"></i>
                </a>
            </div>
            <!--Header Buttons End-->
        </div>
        <!-- /Page Header -->

        <!-- Page Body -->
        <div class="page-body">
            <div class="form-group navbar-form">
                <a class="btn btn-default" href="/Step/EditStep"><i class="fa fa-plus-square"></i>新增销售步骤模版</a>
            </div>
            <div class="widget-body no-padding">
                <table class="table table-hover table-striped">
                    <colgroup class="row">
                        <col class="col-xs-1">
                        <col class="col-xs-9">
                        <col class="col-xs-2">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>销售步骤模版名称</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (list != null && list.Count > 0)
                            {
                                for (int i = 1; i <= list.Count; i++)
                                {
                            <tr>
                                <td>@i</td>
                                <td>@list[i-1].StepName</td>
                                <td>
                                    <a class="btn btn-default btn-sm" href="/Step/EditStep?id=@(list[i-1].ID)"><i class="fa fa-edit"></i>编辑</a>                                   
                                </td>
                            </tr> 
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /Page Body -->

    </div>
    <!-- /Page Content -->
</div>
