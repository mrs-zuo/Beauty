@{
    int UserID = 0;
    if (ViewBag.UserID != null)
    {
        UserID = ViewBag.UserID;
    }
}
<div class="page-container">
    <!-- Page Sidebar -->
    @Html.Partial("Sidebar", 11)
    <!-- /Page Sidebar -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- Page 面包屑 -->
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/Home/Index">首页</a>
                </li>
                <li><a href="/Account/GetAccountList?BranchID=-1&Available=-1">员工列表</a></li>
                <li class="active">修改账户密码</li>
            </ul>
        </div>
        <!-- /Page 面包屑 -->
        <!-- Page Header -->
        <div class="page-header position-relative">
            <div class="header-title">
                <h1>修改账户密码</h1>
            </div>
            <!--Header Buttons-->
            <div class="header-buttons">
                <a class="sidebar-toggler" href="#">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a class="refresh" id="refresh-toggler" href="">
                    <i class="glyphicon glyphicon-refresh"></i>
                </a>
                <a class="fullscreen" id="fullscreen-toggler" href="#">
                    <i class="glyphicon glyphicon-fullscreen"></i>
                </a>
            </div>
            <!--Header Buttons End-->
        </div>
        <!-- /Page Header -->

        <!-- Page Body -->
        <div class="page-body">

            <div class="form-horizontal form-bordered widget-body">

                <div class="form-group">
                    <!-- Search input-->
                    <label  class="col-sm-2 control-label no-padding-right">
                    	新密码
                    	<i class=" control-label glyphicon glyphicon-asterisk darkorange text-left  txt06em txtR"></i>
                    </label>
                    <div class="col-sm-4">
                        <input type="password" id="txtNewPassWord" class="form-control" placeholder="请输入密码">
                    </div>
                </div>

                <div class="form-group">
                    <!-- Search input-->
                    <label class="col-sm-2 control-label no-padding-right">
                    	确认密码
                    	 <i class=" control-label glyphicon glyphicon-asterisk darkorange text-left  txt06em txtR"></i>
                    </label>
                    <div class="col-sm-4">
                        <input type="password"  id="txtConfirmPassWord" class="form-control" placeholder="请再输入一次">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit" onclick="SubmitPassword('@(UserID)')">确 定</button>
                        <a href="javascript:history.go(-1);" class="btn btn-default"> 返 回 </a>
                    </div>
                </div>
            
            </div>
            
        </div>
        <!-- /Page Body -->

    </div>
    <!-- /Page Content -->
</div>
<script src="~/Script/Account.js"></script>