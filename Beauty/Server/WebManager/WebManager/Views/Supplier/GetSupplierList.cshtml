@{
    List<Model.View_Model.SupplierList_Model> listSupplier = Model;
}

<div class="page-container" id="divContent">
    <!-- Page Sidebar -->
    @Html.Partial("Sidebar", 10)
    <!-- /Page Sidebar -->
    <!-- Page Content -->
    <div class="page-content">
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/Home/index">首页</a>
                </li>
                <li class="active">供应商</li>
            </ul>
        </div>
        <!-- /Page 面包屑 -->
        <!-- Page Header -->
        <div class="page-header position-relative">
            <div class="header-title">
                <h1>供应商</h1>
            </div>
            <!--Header Buttons-->
            <div class="header-buttons">
                <a class="sidebar-toggler" href="#">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a class="refresh" id="refresh-toggler" href="">
                    <i class="glyphicon glyphicon-refresh"></i>
                </a>
                <a class="fullscreen" id="fullscreen-toggler" href="#">
                    <i class="glyphicon glyphicon-fullscreen"></i>
                </a>
            </div>
            <!--Header Buttons End-->
        </div>
        <!-- /Page Header -->
        <div class="page-body">

            <div class="form-group navbar-form">
                <div class="input-group">
                    <input id="txtInputSearch" type="text" class="form-control" style="min-width: 195px;" placeholder="请输入供应商名称">
                    <span class="input-group-btn">
                        <a class="btn btn-default" onclick="SearchSupplier()"><i class="fa fa-search"></i></a>
                    </span>
                </div>
                <a href="/Supplier/EditSupplier" class="btn btn-default"><i class="fa fa-plus-square"></i>添加供应商</a>
            </div>
            <div class="widget-body no-padding">
                <table class="table table-hover table-striped">
                    <colgroup class="row">
                        <col class="col-xs-1">
                        <col class="col-xs-4">
                        <col class="col-xs-6">
                        <col class="col-xs-2">
                        <col class="col-xs-2">
                        <col class="col-xs-2">
                        <col class="col-xs-4">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>名称</th>
                            <th>地址</th>
                            <th>电话</th>
                            <th>联系人名称</th>
                            <th>联系人电话</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (listSupplier != null && listSupplier.Count > 0)
                            {
                                int index = 1;
                                foreach (Model.View_Model.SupplierList_Model item in listSupplier)
                                {
                                <tr>
                                    <td>@(index)</td>
                                    <td>@item.SupplierName</td>
                                    <td>@item.SupplierAddr</td> 
                                    <td>@item.SupplierTel</td> 
                                    <td>@item.SupplierContactName</td> 
                                    <td>@item.SupplierContactTel</td>                      
                                    <td>
                                        <a href="/Supplier/EditSupplier?SupplierID=@(item.SupplierID)" class="btn btn-default btn-sm"><i class="fa fa-edit"></i>编辑</a>
                                        @{
                                            if (!ViewBag.isBranch)
                                            {
                                                <a  class="btn btn-default btn-sm" id="@(item.SupplierID)" onclick="delSupplier(@(item.SupplierID))"><i class="fa fa-trash-o"></i>删除</a>
                                            }
                                        }
                                    </td>
                                </tr>
                                    index++;
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="/Script/Supplier.js"></script>
<script src="/assets/js/jquery.lazyload.min.js"></script>
