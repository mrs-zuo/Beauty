@{
    ViewBag.Title = "SelectPromotionProduct";
    List<Model.Table_Model.PromotoinProduct_Model> list = new List<Model.Table_Model.PromotoinProduct_Model>();
    list = Model;
    string promotionCode = ViewBag.PromotionCode;
    int ProductType  =  ViewBag.ProductType;
}
<script src="/Script/PromotionNew.js"></script>
<div class="page-container">
    <!-- Page Sidebar -->
    @Html.Partial("Sidebar", 4)
    <!-- /Page Sidebar -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- 添加促销产品 开始 -->
        <!-- Page 面包屑 -->
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/Home/Index">首页</a>
                </li>
                <li><a href="/Promotion/GetPromotionListNew">促销信息</a></li>
                <li>添加促销商品（服务）</li>
            </ul>
        </div>
        <!-- /Page 面包屑 -->
        <!-- Page Header -->
        <div class="page-header position-relative">
            <div class="header-title">
                <h1>添加促销商品</h1>
            </div>
            <!--Header Buttons-->
            <div class="header-buttons">
                <a class="sidebar-toggler" href="#">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a class="refresh" id="refresh-toggler" href="">
                    <i class="glyphicon glyphicon-refresh"></i>
                </a>
                <a class="fullscreen" id="fullscreen-toggler" href="#">
                    <i class="glyphicon glyphicon-fullscreen"></i>
                </a>
            </div>
            <!--Header Buttons End-->
        </div>
        <!-- /Page Header -->

        <!-- 方案2  -->
        <!-- Page Body -->
        <div class="page-body">
            <div class="widget-body no-padding">
                <table class="table table-hover table-striped">
                    <colgroup class="row">
                        <col class="col-xs-1">
                        <col class="col-xs-5">
                        <col class="col-xs-2">
                        <col class="col-xs-2">
                        <col class="col-xs-2">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>名称</th>
                            <th>规格</th>
                            <th>原价</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbServiceList">

                        @if (list != null && list.Count > 0)
                        {
                            int index = 0;
                            foreach (Model.Table_Model.PromotoinProduct_Model item in list)
                            {
                                index++;
                            <tr>
                                <td>
                                    <label>
                                        <input type="radio" checked="" name="productId" value="@(item.ProductCode)">
                                        <span class="text">@(index)</span>
                                    </label>
                                </td>
                                <td>@(item.ProductName)</td>
                                <td>@(item.Specification)</td>
                                <td>@(item.UnitPrice.ToString("0.00"))</td>
                                <td></td>
                            </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
            <br />
            <button type="submit" class=" btn btn-primary" onclick="AddPromotionProduct('@(promotionCode)',@(ProductType))">确 定</button>
            <a class="btn btn-default" href="/Promotion/GetPromotionProductList?pc=@(promotionCode)">返 回</a>
        </div>
        <!-- /Page Body -->
    </div>
