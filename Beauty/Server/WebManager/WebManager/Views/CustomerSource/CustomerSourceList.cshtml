@{
    ViewBag.Title = "CustomerSourceList";
    List<Model.Table_Model.CustomerSource_Model> list = new List<Model.Table_Model.CustomerSource_Model>();
    if (ViewBag.CustomerSource != null)
    {
        list = ViewBag.CustomerSource;
    }
}


<script src="/Script/CustomerSource.js"></script>
<!--顾客来源页面内容 开始-->
<div class="page-container">
    <!-- Page Sidebar -->
    @Html.Partial("Sidebar", 33)
    <!-- /Page Sidebar -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- Page 面包屑 -->
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/Home/Index">首页</a>
                </li>
                <li>其他设置</li>
                <li>顾客来源</li>
            </ul>
        </div>
        <!-- /Page 面包屑 -->
        <!-- Page Header -->
        <div class="page-header position-relative">
            <div class="header-title">
                <h1>顾客来源</h1>
            </div>
            <!--Header Buttons-->
            <div class="header-buttons">
                <a class="sidebar-toggler" href="#">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a class="refresh" id="refresh-toggler" href="">
                    <i class="glyphicon glyphicon-refresh"></i>
                </a>
                <a class="fullscreen" id="fullscreen-toggler" href="#">
                    <i class="glyphicon glyphicon-fullscreen"></i>
                </a>
            </div>
            <!--Header Buttons End-->
        </div>
        <!-- /Page Header -->
        <!-- Page Body -->
        <div class="page-body">

            <div class="form-group navbar-form">
                <a href="/CustomerSource/CustomerSourceEdit" class="btn btn-default"><i class="fa fa-plus-square"></i>添加顾客来源</a>
            </div>
            <div class="widget-body no-padding">
                <table class="table table-hover table-striped">
                    <colgroup class="row">
                        <col class="col-xs-1">
                        <col class="col-xs-8">
                        <col class="col-xs-3">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>名称</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (list != null && list.Count > 0)
                        {
                            int index = 0;
                            foreach (Model.Table_Model.CustomerSource_Model item in list)
                            {
                                index++;
                            <tr>
                                <td>@(index)</td>
                                <td>@(item.Name)</td>
                                <td>
                                    <a href="/CustomerSource/CustomerSourceEdit?cd=@(item.ID)" class="btn btn-default btn-sm"><i class="fa fa-edit"></i>编辑</a>
                                    <a onclick="deleteSourceType(@(item.ID))" class="btn btn-default btn-sm" id=""><i class="fa fa-trash-o"></i>删除</a>
                                </td>
                            </tr>  
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- /Page Body -->
    </div>
    <!-- /Page Content -->
</div>
<!--顾客来源内容结束-->
