@{
    bool isAdd = true;
    Model.Table_Model.Notice_Model model = new Model.Table_Model.Notice_Model();
    if (ViewBag.IsAdd != null)
    {
        isAdd = ViewBag.IsAdd;
        if (!isAdd)
        {
            if (ViewBag.noticeModel != null)
            {
                model = ViewBag.noticeModel;
            }
        }
    }
}
<div class="page-container">
    <!-- Page Sidebar -->
    @Html.Partial("Sidebar", 3)
    <!-- /Page Sidebar -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- Page 面包屑 -->
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/Home/Index">首页</a>
                </li>
                <li class="active"><a href="/News/GetNewsList">新闻列表</a></li>
                @{
                    if (!isAdd)
                    {
                    <li class="active">修改新闻</li>
                    }
                    else
                    {
                    <li class="active">添加新闻</li>
                    }
                }

            </ul>
        </div>
        <!-- /Page 面包屑 -->
        <!-- Page Header -->
        <div class="page-header position-relative">
            <div class="header-title">
                @{
                    if (!isAdd)
                    {
                    <h1>修改新闻</h1>
                    }
                    else
                    {
                    <h1>添加新闻</h1>
                    }
                }
            </div>
            <!--Header Buttons-->
            <div class="header-buttons">
                <a class="sidebar-toggler" href="#">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a class="refresh" id="refresh-toggler" href="">
                    <i class="glyphicon glyphicon-refresh"></i>
                </a>
                <a class="fullscreen" id="fullscreen-toggler" href="#">
                    <i class="glyphicon glyphicon-fullscreen"></i>
                </a>
            </div>
            <!--Header Buttons End-->
        </div>
        <!-- /Page Header -->

        <!-- Page Body -->
        <div class="page-body">
            <div class="form-horizontal form-bordered widget-body">

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">
                    	新闻标题
                    	<i class=" control-label glyphicon glyphicon-asterisk darkorange text-left  txt06em txtR"></i>
                    	
                    </label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="输入标题" id="xlginput" class="form-control" value="@(model.NoticeTitle)">
                    </div>
                    
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">
                    	新闻内容
                    	<i class=" control-label glyphicon glyphicon-asterisk darkorange text-left  txt06em txtR"></i>
                    	
                    </label>
                    <div class="col-sm-10">
                        <textarea placeholder="请输入新闻内容" id="summernote" rows="6" maxlength="300" class="form-control">@(model.NoticeContent)</textarea>
                    </div>
                </div>
                <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                @{
                    if (!isAdd)
                    {
                    <a class="btn btn-primary" onclick="editNews(@(model.ID),1)">保 存</a>
                    <a href="javascript:history.go(-1);" class="btn btn-default"> 返 回 </a>
                    }
                    else
                    {
                    <a class="btn btn-primary" onclick="addNews(1)">确 定</a>
                    <a href="javascript:history.go(-1);" class="btn btn-default"> 返 回 </a>
                    }
                }
                    </div>
                </div>
                <br>
                <br>
            </div>
        </div>
        <!-- /Page Body -->
    </div>
    <!-- /Page Content -->
</div>
<script src="/Script/News.js"></script>

